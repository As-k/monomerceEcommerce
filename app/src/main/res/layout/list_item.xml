<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4.0dp"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginTop="4.0dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="130.0dp"
            fresco:placeholderImage="@color/stay_color" />

    <!--<LinearLayout android:id="@+id/layout_item_desc"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--android:padding="4dp"-->
        <!--android:weightSum="2">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:id="@+id/item_name"
                android:text="Item Name "
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ic_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:src="@drawable/ic_favorite_border_black_18dp" />
        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--android:padding="4dp"-->
            <!--&gt;-->
            <!--<TextView android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Item descriptions"-->
                <!--android:textSize="10dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 8,999"
                android:maxLength="12"
                android:id="@+id/item_price"
                android:textSize="@dimen/text_size_medium"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/margin_small"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9,999"
                android:maxLength="8"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="10dp"
                android:id="@+id/actual_price" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10% OFF"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="5dp"
                android:id="@+id/discount_percentage" />

        </LinearLayout>
    </LinearLayout>


<!--</LinearLayout>-->
<!--</LinearLayout>-->


</android.support.v7.widget.CardView>