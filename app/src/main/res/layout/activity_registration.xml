<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startup.RegistrationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"/>

        <ImageView
            android:id="@+id/first_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/last_name_icon"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_person" />
        <EditText
            android:id="@+id/first_name"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/text_size_medium"
            android:layout_toRightOf="@+id/first_name_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"/>
        <ImageView
            android:id="@+id/last_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lst_name"
            android:hint="Last Name"
            android:textSize="@dimen/text_size_medium"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_marginTop="145dp"
            android:layout_toRightOf="@+id/last_name_icon"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email_icon_24dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/email_id"
            android:hint="E-Mail"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@+id/email_icon"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/mobile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobile_phone_24dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="240dp"
            android:layout_toRightOf="@+id/mobile_icon"
            android:layout_marginLeft="20dp"
            android:hint="Mobile Number"/>

        <ImageView
            android:id="@+id/lock_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="295dp"
            android:src="@drawable/ic_lock_green_24dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_txt"
            android:hint="Password"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="285dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/lock_image"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/conf_pass_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock_green_24dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_password"
            android:layout_toRightOf="@+id/conf_pass_img"
            android:layout_marginTop="330dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginLeft="20dp"
            android:hint="Confirm Password"/>

        <Button
            android:id="@+id/registration_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/round_button_primary"
            android:text="Get  OTP"
            android:textAllCaps="false"
            android:textColor="@color/gen_white"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>
</android.support.v4.widget.DrawerLayout>