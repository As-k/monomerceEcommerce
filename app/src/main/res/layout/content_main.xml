<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.cioc.monomerce.startup.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            app:tabIndicatorColor="@color/gen_white"
            app:tabTextColor="@color/grey_light"
            app:tabSelectedTextColor="@color/gen_white"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs"
            android:visibility="visible"
            android:layout_marginBottom="50dp"
            />
    <android.support.design.widget.BottomNavigationView android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/bottom_navigation"
                                                        android:layout_alignParentStart="true"
                                                        android:layout_alignParentBottom="true"
                                                        android:background="@color/colorPrimary"
                                                        app:itemTextColor="@color/gen_white"
                                                        app:itemIconTint="@color/bg"
                                                        app:menu="@menu/bottom_navigation_menu"
                                                        >

    </android.support.design.widget.BottomNavigationView>
</RelativeLayout>